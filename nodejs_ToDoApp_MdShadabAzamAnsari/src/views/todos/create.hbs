<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/todos/create" method="POST">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Todo's Title" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="tag" placeholder="Todo's tag" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="body" placeholder="Todo's Description" rows="7" class="form-control"></textarea>
                    </div>
                    <button class="btn btn-primary btn-block">
                        Save
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>