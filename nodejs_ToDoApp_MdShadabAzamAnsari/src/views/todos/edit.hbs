<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/todos/edit/{{todo.id}}" method="POST">
                    {{todo.id}}
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Note's Title" class="form-control"
                            value="{{todo.title}}" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="tag" value="{{todo.tag}}" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="body" placeholder="Note's Description" rows="7"
                            class="form-control">{{todo.body}}</textarea>
                    </div>
                    <button class="btn btn-primary btn-block">
                        Update
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>